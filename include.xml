<?xml version="1.0" encoding="utf-8"?>
<extension>
	
	<haxeflag name="-swf-version" value="15" />
	
	<haxelib name="lime" />
	<template path="backend/lime/templates" />
	<source path="backend/lime" />
	
	<haxelib name="format" if="flash" />
	
	<window width="960" height="540" />
	<window fps="60" />
	
	<!-- Bakeneko default resources -->
	<haxeflag name="-resource" value="resources/shaders/default.vs@shaders.default.vs" />
	<haxeflag name="-resource" value="resources/shaders/default.fs@shaders.default.fs" />
	<haxeflag name="-resource" value="resources/shaders/screen.vs@shaders.screen.vs" />
	<haxeflag name="-resource" value="resources/shaders/screen.fs@shaders.screen.fs" />
	<haxeflag name="-resource" value="resources/shaders/wire.vs@shaders.wire.vs" />
	<haxeflag name="-resource" value="resources/shaders/wire.fs@shaders.wire.fs" />
	<haxeflag name="-resource" value="resources/shaders/vertexColor.vs@shaders.vertexColor.vs" />
	<haxeflag name="-resource" value="resources/shaders/vertexColor.fs@shaders.vertexColor.fs" />
	
	<haxedef name="source-map-content" />
	
	<haxedef name="HXCPP_STACK_TRACE" />
	<haxedef name="HXCPP_TELEMETRY" />
	<haxelib name="hxtelemetry" if="windows && debug" />
	<haxedef name="telemetry" if="windows && debug" />

</extension>